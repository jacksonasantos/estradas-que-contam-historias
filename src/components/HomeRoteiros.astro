---
import RoteiroCard from "./RoteiroCard.astro";
import listaRoteiros from "../data/roteiros";
---

<section class="px-6 md:px-20 py-24">
  <div class="max-w-9xl">
    <h2 class="text-3xl font-serif mb-12">
      Roteiros em destaque
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {listaRoteiros.slice(0, 3).map((roteiro) => (
        <RoteiroCard roteiro={roteiro} />
      ))}
    </div>

    <div class="mt-8">
      <a href="/roteiros" class="underline underline-offset-8 hover:opacity-80">
        Ver todos os roteiros
      </a>
    </div>
  </div>
</section>