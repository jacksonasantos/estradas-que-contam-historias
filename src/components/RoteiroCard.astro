---
const { roteiro } = Astro.props;
---

<a href={`/roteiros/${roteiro.slug}`}
   class="group border border-neutral-800 hover:border-neutral-400 transition p-6 flex flex-col justify-between">

  <div>
    <h3 class="text-xl font-serif mb-2 group-hover:underline">
      {roteiro.titulo}
    </h3>

    <p class="text-neutral-400 text-sm mb-4">
      {roteiro.subtitulo}
    </p>
  </div>

  <div class="text-sm text-neutral-500 space-y-1">
    <div>{roteiro.regiao}</div>
    <div>{roteiro.distancia} Â· {roteiro.duracao}</div>
  </div>
</a>
